<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud Operation</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
    </style>
</head>
<body class="bg-zinc-900 text-white">
    <div class="w-full h-full p-10">
        <div class="nav mb-10">
            <a class="text-blue-500" href="/">Go to Home</a>
            <div class="w-full flex justify-end">
                <a class="bg-red-500 rounded-md px-3 py-2 mb-5 inline-block" href="/adminlogout">Logout</a>
            </div>
        </div>
        <h1 class="text-4xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex flex-wrap gap-3">
            <% users.forEach(function(user) { %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg ">
                    <div class="w-full h-72 rounded-lg bg-zinc-500 overflow-hidden">
                        <img class="w-full h-full object-cover object-top" src="/images/uploads/<%= user._id %>/<%= user.upload.profile %>" alt="Not Available">
                        <!-- <img class="w-full h-full object-cover object-top" src="https://images.pexels.com/photos/771742/pexels-photo-771742.jpeg" alt="Not Available"> -->
                    </div>
                    <h3 class="text-xl tracking-tighter mt-3"><%= user.email %></h3>
                    <h5 class="text-zinc-500 truncate"><%= user.password %></h5>
                    <div class="flex gap-3 mt-3">
                        <a class="text-zinc-200 hover:text-blue-500" href="/edituser/<%= user.id %>">Edit User</a>
                        <a class="text-red-500 hover:text-blue-500" href="/deleteuser/<%= user.id %>">Delete User</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
